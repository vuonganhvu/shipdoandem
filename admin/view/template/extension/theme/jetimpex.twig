{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-theme" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-jetimpex"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-theme" class="form-horizontal">
					<fieldset>
						<legend>{{ text_general }}</legend>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-directory"><span data-toggle="tooltip" title="{{ help_directory }}">{{ entry_directory }}</span></label>
							<div class="col-sm-10">
								<select name="theme_jetimpex_directory" id="input-directory" class="form-control">
									{% for directory in directories %}
										{% if directory == theme_jetimpex_directory %}
											<option value="{{ directory }}" selected="selected">{{ directory }}</option>
										{% else %}
											<option value="{{ directory }}">{{ directory }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
							<div class="col-sm-10">
								<select name="theme_jetimpex_status" id="input-status" class="form-control">
									{% if theme_jetimpex_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
									{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
									{% endif %}
								</select>
							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend>{{ entry_responsive }}</legend>
						<div class="form-group">
							<label class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label">{{ entry_responsive }}</label>
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
								<select name="theme_jetimpex_responsive" class="form-control">
									{% if theme_jetimpex_responsive == 1 %}
										<option value="1" selected='selected'>{{ text_disabled }}</option>
										<option value="0">{{ text_enabled }}</option>
									{% else %}
										<option value="1">{{ text_disabled }}</option>
										<option value="0" selected="selected">{{ text_enabled }}</option>
									{% endif %}
								</select>
							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend>{{ entry_page_direction }}</legend>
						<div class="form-group">
							<label class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label">{{ entry_page_direction }}</label>
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
								<select name="theme_jetimpex_page_direction" class="form-control">
									{% if theme_jetimpex_page_direction == 'rtl' %}
										<option value="rtl" selected='selected'>{{ text_rtl }}</option>
										<option value="ltr">{{ text_ltr }}</option>
									{% else %}
										<option value="rtl">{{ text_rtl }}</option>
										<option value="ltr" selected="selected">{{ text_ltr }}</option>
									{% endif %}
								</select>
							</div>
						</div>
					</fieldset>
