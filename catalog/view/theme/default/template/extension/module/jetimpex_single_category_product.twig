															{% if (label_discount) %}
																<div class="discount">
																	<span>{{ product.label_discount }}</span>
																</div>
															{% endif %}
														{% endif %}
														{% if product.tax %}
															<span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
														{% endif %}
													</p>
												{% endif %}
												{% if (product.label_new) %}
													<div class="new-pr"><span>{{ text_new }}</span></div>
												{% endif %}
											</div>
											<div class="button-group">
												<button type="button" class="product-btn-add" {% if (product.options|length > 3) %} onclick="cart.add('{{ product.product_id }}');" {% else %} onclick="ajaxAdd($(this),{{ product.product_id }});" {% endif %}>
													<i class="fa fa-shopping-cart"></i>
													<span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span>
												</button>
												<button type="button" class="product-btn" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
												<button type="button" class="product-btn" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
											</div>
										</div>
									</div>
									{%set option_index = option_index + 1 %}
								{% endfor %}
							</div>
						</div>
					</div>
				{% endif %}
				<div class="view-all">
					<a href='{{ category_link }}'>{{ text_view }}</a>
				</div>
			</div>
		</div>
	</div>
</div>